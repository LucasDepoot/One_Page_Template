---
import data from "../datas/service.json";
import Cta from "./Cta.astro";
---
<section id="service">
    <h2>Nos Prestations</h2>
    <div class="services">
        {data.map((i)=>(
            <div class="card">
                <img class="elementToAnimate" loading="lazy" src={i.image} alt={i.imageAlt} width="150px"/>
                <h3>{i.title}</h3>
                <ul>
                    {i.description.map((d)=>(
                        <li>{d}</li>
                    ))}
                </ul>
                <Cta text="Obtenez un devis" style="cta-card"/>
            </div>
        ))}
    </div>
</section>
<style>
    section{
        padding-top: 2rem;
    }
    .services{
        width: 80%;
        gap: 2rem;
        margin: 0 auto;
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
    }
    h2{
        text-align: center;
        font-size: 3rem;
        margin-bottom: 2rem;
    }
    .card{
        display: flex;
        flex-direction: column;
        text-align: center;
        justify-content: space-between;
        width: 20%;
        padding: 0.5rem 2rem;
        font-size: var(--fontsize-text);
        height: 700px;
    }
    ul{
        list-style: circle;
        text-align: left;
    }
    li{
        margin-bottom: 0.5rem;
    }
    h3{
        margin-bottom: 0.75rem;
    }
    img{
        margin: 0 auto 1.5rem;
        border-radius: 50%;
        aspect-ratio: 1/1;
    }
    @media(max-width:1250px){
        .card{
            width: 40%;
        }
    }
    @media(max-width:750px){
        .services{
            flex-direction: column;
        }
        .card{
            width: 80%;
            margin: 0 auto;
            font-size: 1rem;
            height: fit-content;
        }
    }
</style>