---
import data from "../datas/entreprise.json";
import Cta from "./Cta.astro";
---
<section>
    <div class="elementToAnimate">
        <img loading="lazy" src={data.presentationImage} alt={data.presentationAltImage}>
        <p>{data.presentation}</p>
    </div>
    <div class="cta-container">
        <Cta text="Contactez-nous" style="cta-contact"/>
    </div>
</section>

<style>
     section {
        width: 45%;
        margin: 7rem auto 0;
    }
    img{
        float: right;
        margin: 0 0 0.5rem 0.5rem;
        width: 200px;
    }
    p{
        margin: 0;
        font-size: 1.5rem;
    }
    .cta-container{
        margin: 4rem 0;
        text-align: center;
        font-size: var(--fontsize-text);
    }
    .animate {
        animation: zoom-in-zoom-out 1s ease-in-out;    
    }
    @keyframes zoom-in-zoom-out {
        0% {
            scale: 100%;
        }
        50% {
            scale: 110%;
        }
        100% {
            scale: 100%;
        }
    }
    @media(max-width:750px){
        section{
            width: 80%;
            margin: 4rem auto;
        }
        div{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;     
        }
        img{
            float: inherit;
            margin:0;
            margin-bottom: 2rem;
        }
        p{
            font-size: 1.1rem;
        }
        .cta-container{
            font-size: 1.2rem;
            margin-top: 2.5rem;
        }
	}
</style>