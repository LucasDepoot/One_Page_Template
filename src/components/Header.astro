---
import data from "../datas/entreprise.json";
---
    <section>
        <div class="name">
            <img loading="eager" src={data.logo} alt={`Logo ${data.entreprise}`} width="100px">
            <h1><a href="/">{data.entreprise}</a></h1>
        </div>
        <div class="contact">
            <ul>
                <li>
                    <img loading="eager" src={data.phoneImage} alt="Telephone" width="35px">
                    <a href={`tel:${data.phone}`}>{data.phone}</a>
                </li>
                <li>
                    <img loading="eager" src={data.mailImage} alt="Enveloppe" width="35px">
                    <a href={`mailto:${data.mail}`}>{data.mail}</a>
                </li>
                <li>
                    <img loading="eager" src={data.locationImage} alt="Telephone" width="35px" >
                    <a href=`https://www.google.com/search?q=${data.location}` target="_blank">{data.location}</a>
                </li>
                <li>
                    <ul class="social">
                        {data.social.map((i)=>(
                            <li>
                                <a href={i.link}><img loading="eager" src={i.image} alt="RÃ©seaux sociaux" width="35px"/></a>
                            </li>
                        ))}
                    </ul>
                </li>
            </ul>
        </div>
    </section>
<style>
    section{
        display: flex;
        justify-content: space-between;
    }

    .name{
        padding: 1rem 1rem;
        display: flex;
        align-items: center;
        text-align: center;
        font-size: 2rem;
    }
    .name>h1{
        margin-left: 1rem;
    }
    .name img{
        border-radius: var(--border-radius);
    }
    .contact{
        display: flex;
        flex-direction: column;
        justify-content: center;
        background: var(--color-secondary);
        border-radius: 20px;
        margin: 1rem 1rem 1rem 0;
        color: var(--color-background);
    }
    .contact img {
        background: var(--color-background);
        padding: 3px;
        border-radius: 25%;
    }
    .contact ul{
        display: flex;
        align-items: center;
        justify-content: space-evenly;
    }
    .contact>ul>li{
        margin: 0.5rem;
        display: flex;
        align-items: center;
    }
    .contact>ul>li>img{
        margin-right: 0.5rem;
        aspect-ratio: 1/1;
    }
    .social{
        width: 100%;
        display: flex;
        justify-content: center;
    }
    .social a{
        margin-right: 1rem;
    }
    .social img {
        aspect-ratio: 1/1;
    }
    .name h1:hover{
        color:var(--color-text-light);
    }
    .contact a:hover{
        color: var(--color-text-light);
        text-decoration: underline;
        text-underline-offset: 3px;
    }
    .social img:hover {
        background: var(--color-primary);
    }
    @media(max-width:1280px){
        .contact>ul{
            display: block;
        }
    }
    @media(max-width:750px){
        section{
            display: flex;
            flex-direction: column;
        }
        .name{
            flex-direction: column;
            font-size: 2rem;
            padding: 0;
            align-items: center;
        }
        .name>img{
            display: none;
        }
        .name>a{
            margin: 0;
        }
        .contact{
            margin: 1rem auto;
            padding-bottom: 0;
            padding-top: 0;
        }
        .contact>ul{
            display: block;
        }
        .contact li {
            justify-content: flex-start;
        }
        .social{
            display: flex;
            flex-direction: row;
        }
    }
</style>
