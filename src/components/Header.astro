---
import data from "../datas/entreprise.json";
import Hero from "./Hero.astro";
---
    <section>
        <div class="name">
            <img loading="eager" src={data.logo} alt={`Logo ${data.entreprise}`} width="120px" height="120px">
            <h1><a href="/">{data.entreprise}</a></h1>
        </div>
        <div class="contact">
            <ul>
                <li>
                    <img loading="eager" src={data.locationImage} alt="Telephone" width="25px">
                    <a href=`https://www.google.com/search?q=${data.location}` target="_blank">{data.location}</a>
                </li>
                <li>
                    <img loading="eager" src={data.phoneImage} alt="Telephone" width="25px">
                    <a href={`tel:${data.phone}`}>{data.phone}</a>
                </li>
                <li>
                    <img loading="eager" src={data.mailImage} alt="Enveloppe" width="25px">
                    <a href={`mailto:${data.mail}`}>{data.mail}</a>
                </li>
                <li>
                    <ul class="social">
                        {data.social.map((i)=>(
                            <li>
                                <a href={i.link}><img loading="eager" src={i.image} alt="RÃ©seaux sociaux" width="25px"/></a>
                            </li>
                        ))}
                    </ul>
                </li>
            </ul>
        </div>
    </section>
<style>
    section{
        background: var(--color-primary);
        display: grid;
        grid-template-columns: repeat(3,1);
    }

    .name{
        grid-column: 1;
        padding: 1rem 1rem;
        display: flex;
        align-items: center;
        text-align: center;
        font-size: 2.5rem;
    }
    .name>h1{
        margin-left: 1rem;
    }
    .contact{
        display: flex;
        align-items: center;
        flex-direction: column;
        justify-content: space-evenly;
        grid-column: 3;
    }
    .contact>ul>li{
        margin: 0.5rem;
        display: flex;
        align-items: center;
    }
    .contact>ul>li>img{
        margin-right: 0.5rem;
    }
    .social{
        width: 100%;
        display: flex;
        justify-content: center;
    }
    .social a{
        margin-right: 1rem;
    }
    .name h1:hover{
        color:var(--color-secondary);
    }
    .contact a:hover{
        color: var(--color-secondary);
        text-decoration: underline;
        text-underline-offset: 3px;
    }
    @media(max-width:750px){
        section{
            display: flex;
            flex-direction: column;
        }
        .name{
            flex-direction: column;
            font-size: 2rem;
            padding-bottom: 0;
        }
        .name>img{
            display: none;
        }
        .name>a{
            margin: 0;
        }
        .contact{
            padding-bottom: 0;
            padding-top: 0;
        }
    }
</style>
