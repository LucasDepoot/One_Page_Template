---

<Layout>
	<header>
		<Header />
	</header>
	<!-- <Welcome /> -->
</Layout>
<style>
	header{
		height: 75%;
		background-position: center;
		background-size: cover;
		background-image: var(--picture-tall-background);
	}
	@media(max-width:750px){
		header{
			background-image: var(--picture-small-background);
		}
	}
</style>
